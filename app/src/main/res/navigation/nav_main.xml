<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_viewPostFragment"
            app:destination="@id/viewPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_editPost2"
            app:destination="@id/editPost2" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activity.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/viewPostFragment"
        android:name="ru.netology.nmedia.activity.ViewPostFragment"
        android:label="fragment_view__post"
        tools:layout="@layout/fragment_view__post" >
        <action
            android:id="@+id/action_viewPostFragment_to_editPost"
            app:destination="@id/editPost2" />
    </fragment>
    <fragment
        android:id="@+id/editPost2"
        android:name="ru.netology.nmedia.activity.EditPost"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post" />
</navigation>